{
  "name": "l3onkers-site",
  "version": "1.0.0",
  "description": "Personal website built with Jekyll and optimized for performance",
  "main": "index.js",
  "scripts": {
    "build": "npm run minify && bundle exec jekyll build",
    "minify": "node scripts/minify.js",
    "serve": "bundle exec jekyll serve --livereload",
    "test": "npm run test:rspec && npm run test:lighthouse",
    "test:rspec": "bundle exec rspec",
    "test:lighthouse": "npx lighthouse http://localhost:4000 --output json --output-path ./lighthouse-report.json",
    "optimize": "npm run minify && npm run test:lighthouse",
    "deploy": "npm run build && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/l3onkers/l3onkers.github.io.git"
  },
  "keywords": [
    "jekyll",
    "github-pages",
    "portfolio",
    "blog",
    "performance",
    "pwa"
  ],
  "author": "L3onkers",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/l3onkers/l3onkers.github.io/issues"
  },
  "homepage": "https://l3onkers.github.io",
  "devDependencies": {
    "clean-css": "^5.3.3",
    "terser": "^5.26.0",
    "lighthouse": "^11.4.0",
    "@axe-core/cli": "^4.8.4"
  },
  "dependencies": {},
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}
